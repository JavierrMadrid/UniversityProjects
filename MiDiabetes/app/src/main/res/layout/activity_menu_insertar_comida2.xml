<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.javier.midiabetes.MenuAlimentos"
    android:background="@color/ap_white">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnEscribir"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnInsertar2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Comida"
                android:id="@+id/mensajeNFC"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/ap_white"
                android:textSize="25sp"
                android:background="@drawable/contornotxt"
                android:textAlignment="center" />

            <EditText
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mensajeNFC"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/txtAñadirComida2"
                android:textStyle="italic"
                android:textSize="20dp"
                android:autoLink="none"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Peso"
                android:id="@+id/textView2"
                android:textColor="@color/ap_white"
                android:layout_below="@+id/txtAñadirComida2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="25sp"
                android:background="@drawable/contornotxt"
                android:layout_marginTop="15dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtAñadirPeso2"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textView5"
                android:layout_alignEnd="@+id/textView5"
                android:textStyle="italic"
                android:textSize="20dp"
                android:autoLink="none"
                android:focusable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Raciones"
                android:id="@+id/textView3"
                android:textColor="@color/ap_white"
                android:layout_below="@+id/txtAñadirRaciones2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="25sp"
                android:background="@drawable/contornotxt"
                android:layout_marginTop="15dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtAñadirRaciones2"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/txtAñadirPeso2"
                android:layout_alignEnd="@+id/txtAñadirPeso2"
                android:textStyle="italic"
                android:textSize="20dp"
                android:autoLink="none" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Calorías"
                android:id="@+id/textView4"
                android:textColor="@color/ap_white"
                android:layout_below="@+id/txtAñadirPeso2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="25sp"
                android:background="@drawable/contornotxt"
                android:layout_marginTop="15dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtAñadirCalorias2"
                android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textView5"
                android:layout_alignEnd="@+id/textView5"
                android:textStyle="italic"
                android:textSize="20dp"
                android:autoLink="none" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ingredientes"
                android:id="@+id/textView5"
                android:textColor="@color/ap_white"
                android:layout_below="@+id/txtAñadirCalorias2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="25sp"
                android:background="@drawable/contornotxt"
                android:layout_marginTop="15dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:id="@+id/txtAñadirIngredientes2"
                android:layout_below="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textStyle="italic"
                android:textSize="20dp"
                android:autoLink="none" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Añadir"
        android:id="@+id/btnInsertar2"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btnguardaranimado"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/ap_white" />


</RelativeLayout>
