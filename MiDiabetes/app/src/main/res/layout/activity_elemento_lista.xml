<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_elemento_lista"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/elementolista">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDate"
        android:width="120dp"
        android:height="25dp"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txtHour"
        android:layout_alignEnd="@+id/txtHour" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHour"
        android:width="100dp"
        android:height="20dp"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="?attr/textColorAlertDialogListItem"
        android:layout_below="@+id/txtDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtGlucosa"
        android:width="75dp"
        android:height="50dp"
        android:textAlignment="center"
        android:textSize="38sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBottom="@+id/txtHour"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Glucosa:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtGlu"
        android:height="20dp"
        android:width="75dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txtGlucosa"
        android:layout_toStartOf="@+id/txtGlucosa"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtmomento"
        android:textSize="20sp"
        android:textColor="@color/ap_charcoal"
        android:textAlignment="center"
        android:layout_below="@+id/txtHour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
