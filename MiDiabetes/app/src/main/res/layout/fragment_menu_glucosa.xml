<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/tabs"
        android:background="@color/colorAccent">

        <android.support.design.widget.TabItem
            android:id="@+id/glucosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/gota" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/estadisticas"
            android:icon="@drawable/quesito" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grafica"
            android:icon="@drawable/grafica" />
    </android.support.design.widget.TabLayout>

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        android:tag="fragment_container"
        android:weightSum="1">

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@drawable/anadir"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="mini"
        app:layout_anchor="@+id/fragment_container"
        app:layout_anchorGravity="bottom|right"
        tools:ignore="RtlHardcoded" />

</android.support.design.widget.CoordinatorLayout>

