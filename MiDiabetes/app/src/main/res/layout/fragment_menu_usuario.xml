<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.javier.midiabetes.MenuUsuarioFragment">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnEditarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@drawable/editar"
        android:visibility="visible"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        tools:ignore="RtlHardcoded" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="RtlHardcoded,UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="280dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/imagenperfil"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView48"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:text="Datos"
                        android:textAllCaps="false"
                        android:textColor="@color/ap_charcoal"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/textView49"
                        android:layout_alignStart="@+id/textView49"
                        tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />

                    <TextView
                        android:id="@+id/textView49"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:text="Personales"
                        android:textAllCaps="false"
                        android:textColor="@color/ap_charcoal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:layout_below="@+id/textView48"
                        android:layout_alignLeft="@+id/imageView2"
                        android:layout_alignStart="@+id/imageView2"
                        android:layout_marginLeft="46dp"
                        android:layout_marginStart="46dp"
                        tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contornoperfil1"
                android:layout_weight="0.11">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Informacion general"
                    android:textAlignment="center"
                    android:textColor="@color/ap_white"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="Nombre"
                        android:textColor="@color/ap_black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:id="@+id/txtNombre"
                        android:layout_width="222dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textColor="@color/ap_charcoal"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="Peso  "
                        android:textColor="@color/ap_black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:id="@+id/txtPeso"
                        android:layout_width="182dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.03"
                        android:textAlignment="textEnd"
                        android:textColor="@color/ap_charcoal"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="Edad"
                        android:textColor="@color/ap_black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:id="@+id/txtEdad"
                        android:layout_width="182dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.03"
                        android:textAlignment="textEnd"
                        android:textColor="@color/ap_charcoal"
                        android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView44"
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="16dp"
                        android:text="Debut diabético"
                        android:textColor="@color/ap_black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:id="@+id/txtDebut"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textColor="@color/ap_charcoal"
                        android:textSize="22sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/contornoperfil2"
                    tools:ignore="UselessParent">

                    <TextView
                        android:text="Rangos de glucosa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:textSize="20sp"
                        android:textColor="@color/ap_white"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="15dp"
                        android:textStyle="normal|bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:text="Niveles altos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView50"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/ap_black"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView52"
                            android:layout_width="137dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:text="Ayunas"
                            android:textColor="@color/ap_black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,RtlHardcoded"
                            android:layout_weight="0.54" />

                        <TextView
                            android:id="@+id/txtMaxGlucosaAyunas"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:textColor="@color/ap_charcoal"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView51"
                            android:layout_width="156dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Despues de comer"
                            android:textColor="@color/ap_black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/txtMaxGlcuosaComido"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.02"
                            android:textAlignment="textEnd"
                            android:textColor="@color/ap_charcoal"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="155dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Nocturnos"
                            android:textColor="@color/ap_black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/txtMaxGlucosaNoche"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:textColor="@color/ap_charcoal"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView57"
                            android:layout_width="155dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="0.13"
                            android:text="Estandar"
                            android:textColor="@color/ap_black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/txtMaxGlucosaEstandar"
                            android:layout_width="172dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18dp"
                            android:layout_weight="1.07"
                            android:textAlignment="textEnd"
                            android:textColor="@color/ap_charcoal"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:id="@+id/textView65"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:elevation="1dp"
                        android:text="Niveles bajos"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/ap_black"
                        tools:ignore="HardcodedText,UnusedAttribute" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:text="Ayunas"
                            android:layout_width="155dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView28"
                            android:textSize="18sp"
                            android:textColor="@color/ap_black"
                            android:layout_marginLeft="16dp"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/txtMinGlucosaAyunas"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:textColor="@color/ap_charcoal"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:weightSum="1">

                        <TextView
                            android:text="Despues de comer"
                            android:layout_width="156dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView67"
                            android:textSize="18sp"
                            android:textColor="@color/ap_black"
                            android:layout_marginLeft="16dp"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/txtMinGlucosaComido"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.03"
                            android:textAlignment="textEnd"
                            android:textColor="@color/ap_charcoal"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView53"
                            android:layout_width="156dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Nocturnos"
                            android:textColor="@color/ap_black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/txtMinGlucosaNoche"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:textColor="@color/ap_charcoal"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView58"
                            android:layout_width="155dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="0.14"
                            android:text="Estandar"
                            android:textColor="@color/ap_black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                        <TextView
                            android:id="@+id/txtMinGlucosaEstandar"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="19dp"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textColor="@color/ap_charcoal"
                            android:textSize="20sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contornoperfil1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Otros datos"
                    android:textAlignment="center"
                    android:textColor="@color/ap_white"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:elevation="1dp"
                        android:text="HbA1c (última toma)  "
                        android:textColor="@color/ap_black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />

                    <TextView
                        android:id="@+id/txtHbA1c"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.14"
                        android:gravity="center"
                        android:textAlignment="textEnd"
                        android:textColor="@color/ap_charcoal"
                        android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:text="Índice de sensibilidad"
                        android:textColor="@color/ap_black"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txtIndiceSensiblidad"
                        android:layout_width="156dp"
                        android:layout_height="match_parent"
                        android:textAlignment="textEnd"
                        android:textColor="@color/ap_charcoal"
                        android:textSize="22sp"
                        tools:ignore="InefficientWeight" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnCerrarSesion"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btncerrarsesionanimado"
                    android:text="Cerrar sesion"
                    android:textColor="@color/ap_white"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:layout_weight="0.22" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>