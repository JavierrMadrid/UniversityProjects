<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.javier.midiabetes.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGlucosa"
        android:background="@drawable/pulsarglucosa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUsuario"
        android:width="120dp"
        android:minHeight="60dp"
        android:background="@drawable/pulsarusuario"
        android:layout_below="@+id/btnAlimentos"
        android:layout_alignLeft="@+id/btnGlucosa"
        android:layout_alignStart="@+id/btnGlucosa" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAlimentos"
        android:width="120dp"
        android:minHeight="60dp"
        android:background="@drawable/pulsaralimentos"
        tools:ignore="RelativeOverlap"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnUsuario"
        android:layout_alignStart="@+id/btnUsuario" />

</RelativeLayout>
