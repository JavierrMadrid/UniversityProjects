<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.javier.midiabetes.MenuAlimentosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contornotxt"
            android:text="Comida"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ap_white"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textComida"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:width="300dp"
            android:height="80dp"
            android:background="@color/BlancoTransp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/ap_charcoal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/contornotxt"
            android:text="Peso (g)"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ap_white"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textPeso"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginBottom="8dp"
            android:width="300dp"
            android:height="50dp"
            android:background="@color/BlancoTransp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/ap_charcoal"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.01">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/contornotxt"
                    android:text="Raciones"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/ap_white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/contornotxt"
                    android:text="Hidratos (g)"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/ap_white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textRaciones"
                    android:layout_width="164dp"
                    android:layout_height="30dp"
                    android:width="300dp"
                    android:height="50dp"
                    android:background="@color/BlancoTransp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/ap_charcoal"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textGramosxRacion"
                    android:layout_width="162dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:width="300dp"
                    android:height="50dp"
                    android:background="@color/BlancoTransp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/ap_charcoal"
                    android:textSize="22sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtMediaCena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/contornotxt"
            android:text="Ingredientes"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/ap_white"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textIngredientes"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginBottom="8dp"
            android:width="300dp"
            android:height="50dp"
            android:background="@color/BlancoTransp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/ap_charcoal"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/imgnfc" />

    </LinearLayout>


</RelativeLayout>
